# Database (PostgreSQL)
DATABASE_URL=postgresql://letably:letably_dev@localhost:5432/letably

# JWT Configuration (for regular users/admins)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Super Admin JWT Configuration (for platform-level super admins)
SUPER_JWT_SECRET=your-super-admin-jwt-secret-change-in-production
SUPER_JWT_EXPIRES_IN=8h

# Frontend URL (used for email links like password reset)
FRONTEND_URL=http://localhost:3000

# ============================================================
# Platform-Level SMTP Configuration (used by super admin)
# ============================================================
# These settings are used for platform-wide system emails
# (e.g., super admin notifications, platform alerts)
#
# Development: Use Mailtrap (https://mailtrap.io)
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password
# SMTP_SECURE=false
#
# Production examples:
#
# SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_SECURE=false
#
# Amazon SES:
# SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-ses-smtp-username
# SMTP_PASS=your-ses-smtp-password
# SMTP_SECURE=false
#
# Mailgun:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.mailgun.org
# SMTP_PASS=your-mailgun-password
# SMTP_SECURE=false
#
# Office 365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_USER=your-email@yourdomain.com
# SMTP_PASS=your-password
# SMTP_SECURE=false
#
# Gmail (use app password, not regular password):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_SECURE=false

SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@letably.com
SMTP_FROM_NAME=Letably Platform

# Encryption key for SMTP passwords stored in database (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
EMAIL_ENCRYPTION_KEY=generate-a-64-character-hex-string

# Encryption key for uploaded files (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
FILE_ENCRYPTION_KEY=generate-a-64-character-hex-string

# Server Configuration
PORT=3001
NODE_ENV=development

# File Storage
UPLOAD_DIR=./uploads

# Rate Limiting (per agency)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
